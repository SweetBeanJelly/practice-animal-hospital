<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jyk.administrator.animal.Member_update"
    android:background="@drawable/main_sub">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="정보수정"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#252525"
        android:layout_marginTop="100dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableLayout"
        android:layout_marginTop="10dp"
        android:background="#62ffffff"
        android:padding="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:layout_span="1"
                android:id="@+id/txtNum"
                android:gravity="center"
                android:textColor="#252525" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_weight="0"
                android:id="@+id/txt1"
                android:textColor="#252525"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:background="@null"
                android:paddingBottom="10dp"
                android:id="@+id/editId"
                android:textColor="#252525"
                android:paddingTop="10dp"
                android:paddingLeft="5dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_span="1"
                android:id="@+id/txtName"
                android:gravity="center"
                android:textColor="#252525" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_weight="0"
                android:id="@+id/txt2"
                android:textColor="#252525"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/editName"
                android:textColor="#252525" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:layout_span="1"
                android:id="@+id/txtPwd"
                android:gravity="center"
                android:textColor="#252525" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_weight="0"
                android:id="@+id/txt3"
                android:textColor="#252525"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:id="@+id/editPwd"
                android:textColor="#252525" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Mail"
                android:layout_span="1"
                android:id="@+id/txtEmail"
                android:gravity="center"
                android:textColor="#252525" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_weight="0"
                android:id="@+id/txt4"
                android:textColor="#252525"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/editEmail"
                android:textColor="#252525" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대전화 번호"
                android:layout_span="1"
                android:id="@+id/txtPhone"
                android:gravity="center"
                android:textColor="#252525" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_weight="0"
                android:id="@+id/txt5"
                android:textColor="#252525"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_weight="1"
                android:id="@+id/editPhone"
                android:textColor="#252525" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:layout_span="1"
                android:id="@+id/txtYear"
                android:gravity="center"
                android:textColor="#252525" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_weight="0"
                android:id="@+id/txt6"
                android:textColor="#252525"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_weight="1"
                android:id="@+id/editYear"
                android:hint="ex) 19960723"
                android:textColorHint="#808080"
                android:textColor="#252525" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 보기"
                android:id="@+id/cboPass"
                android:textColor="#252525"
                android:checked="false" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="확인"
            android:id="@+id/btnY"
            android:width="120dp"
            android:height="50dp"
            android:gravity="center"
            android:background="#ff8080"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="다시 작성"
            android:id="@+id/btnClear"
            android:width="120dp"
            android:height="50dp"
            android:background="#b3ffffff"
            android:textColor="#202020"
            android:textSize="15dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="닫기"
            android:id="@+id/btnC"
            android:width="120dp"
            android:height="50dp"
            android:gravity="center"
            android:background="#ff8080"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
